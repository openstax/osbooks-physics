  </m:msub>
  <m:mo>=</m:mo><m:mo>+</m:mo><m:mn>10</m:mn><m:mspace width="0.3em"/><m:mtext>C</m:mtext><m:mo>+</m:mo><m:msub>
   <m:mi>q</m:mi>
   <m:mrow>
    <m:mtext>red</m:mtext></m:mrow>
  </m:msub>
  </m:mrow>
</m:math>, where  <m:math>
