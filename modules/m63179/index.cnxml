  </m:mfrac>
  <m:mo>=</m:mo><m:mfrac>
   <m:mrow>
    <m:mn>1.0</m:mn><m:mspace width="0.3em"/><m:mtext>J</m:mtext>
   </m:mrow>
   <m:mrow>
    <m:mn>0.001</m:mn><m:mspace width="0.3em"/><m:mtext>s</m:mtext>
