   </m:msup>
<m:mspace width="0.25em"/><m:mtext>becomes</m:mtext><m:mspace width="0.25em"/><m:mi>y</m:mi><m:mo>=</m:mo><m:msub>
    <m:mi>y</m:mi>
    <m:mn>0</m:mn>
   </m:msub>
   <m:mo>+</m:mo><m:msub>
    <m:mi>v</m:mi>
