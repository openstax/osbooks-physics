    </m:msup>
   </m:mrow>
  </m:mfrac>
 </m:mrow>
</m:math>  when <emphasis effect="italics">d</emphasis><sub>0</sub> = 0 and <emphasis effect="italics">v</emphasis><sub>0</sub> = 0</item>
<item> <m:math>
 <m:mrow>
  <m:msup>
   <m:mi>v</m:mi>
