   <m:mi>v</m:mi>
   <m:mo>¯</m:mo>
  </m:mover>
  <m:mi>t</m:mi>
 </m:mrow>
</m:math>, or  <m:math>
 <m:mrow>
  <m:mover accent="true">
   <m:mi>v</m:mi>
