   <m:mi>d</m:mi>
   <m:mi>t</m:mi>
  </m:mfrac>

 </m:mrow>
</m:math>  when <emphasis effect="italics">d</emphasis><sub>0</sub> = 0</item>
<item> <m:math>
 <m:mrow>
  <m:mover accent="true">
   <m:mi>v</m:mi>
   <m:mo>¯</m:mo>
  </m:mover>
  <m:mo>=</m:mo><m:mfrac>
   <m:mrow>
    <m:msub>
     <m:mi>v</m:mi>
     <m:mn>0</m:mn>
    </m:msub>
    <m:mo>+</m:mo><m:msub>
     <m:mi>v</m:mi>
     <m:mtext>f</m:mtext>
    </m:msub>
   </m:mrow>
   <m:mn>2</m:mn>
  </m:mfrac>
 </m:mrow>
</m:math> </item>
<item> <m:math>
 <m:mrow>
  <m:mi>v</m:mi><m:mo>=</m:mo><m:msub>
   <m:mi>v</m:mi>
   <m:mn>0</m:mn>
  </m:msub>
  <m:mo>+</m:mo><m:mi>a</m:mi><m:mi>t</m:mi>
 </m:mrow>
</m:math>, or  <m:math>
 <m:mrow>
  <m:mi>a</m:mi><m:mo>=</m:mo><m:mfrac>
   <m:mi>v</m:mi>
   <m:mi>t</m:mi>
  </m:mfrac>
 </m:mrow>
</m:math>  when <emphasis effect="italics">v</emphasis><sub>0</sub> = 0</item>
<item> <m:math>
 <m:mrow>
  <m:mi>d</m:mi><m:mo>=</m:mo><m:msub>
   <m:mi>d</m:mi>
   <m:mn>0</m:mn>
  </m:msub>
  <m:mo>+</m:mo><m:msub>
   <m:mi>v</m:mi>
