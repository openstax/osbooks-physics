<equation id="fs-id1164565253577"> <m:math>
 <m:mrow>
  <m:msub>
   <m:mstyle mathvariant="bold" mathsize="normal"><m:mi>W</m:mi></m:mstyle>
   <m:mi>M</m:mi>
  </m:msub>
  <m:mo>=</m:mo><m:mi>m</m:mi><m:msub>
   <m:mstyle mathvariant="bold" mathsize="normal"><m:mi>g</m:mi></m:mstyle>
   <m:mi>M</m:mi>
  </m:msub>
  <m:mo>=</m:mo><m:mrow><m:mo>(</m:mo>
   <m:mrow>
    <m:mn>60.0</m:mn><m:mspace width="0.3em"/><m:mtext>kg</m:mtext></m:mrow>
  <m:mo>)</m:mo></m:mrow><m:mrow><m:mo>(</m:mo>
   <m:mrow>
    <m:mn>3.71</m:mn><m:msup>
     <m:mrow>
      <m:mtext>m/s</m:mtext></m:mrow>
     <m:mn>2</m:mn>
    </m:msup>
    </m:mrow>
  <m:mo>)</m:mo></m:mrow><m:mo>=</m:mo><m:mn>223</m:mn><m:mspace width="0.3em"/><m:mtext>N</m:mtext></m:mrow>
